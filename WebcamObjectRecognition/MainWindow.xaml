<Window x:Class="WebcamObjectRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Object Recognition" Height="635" Width="846" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status and Input -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Status: " FontSize="16"/>
            <TextBlock x:Name="StatusText" Text="Idle" FontSize="16" Foreground="Green"/>
        </StackPanel>

        <!-- Webcam Feed -->
        <Image x:Name="WebcamImage" Grid.Row="1" Stretch="Uniform" Margin="29,14,355,175" IsEnabled="False"/>

        <!-- Buttons -->
        <TabControl Grid.Row="1" Margin="0,432,0,0">
            <TabItem Header="Capture">
                <Grid Background="#FFE5E5E5">
                    <TextBlock Text=" Label:"     FontSize="16"         Margin="83,47,697,33" IsEnabled="False" />
                    <TextBox x:Name="LabelInput" FontSize="16"          Margin="164,28,525,33" TextChanged="LabelInput_TextChanged" Height="50" Width="150"/>
                    <Button x:Name="CaptureButton" Content="Capture"    Margin="351,28,339,33" Click="CaptureButton_Click" IsEnabled="False" Height="50" />
                     <Button x:Name="FileButton" Content="ShowFiles"     Margin="536,28,154,33" Click="Files_Click" IsEnabled="False" Height="50"/>
                    </Grid>
            </TabItem>
            <TabItem Header="Train" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="TrainModel" Content="Train Model" Width="150" Margin="289,19,352,29" Click="Train_Click" Grid.Column="2" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Detection">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="DetectButton" Content="Start Detect Mode" Margin="307,34,383,34" Click="DetectButton_Click" Width="150" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Stop">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="769*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="StopButton" Content="Stop" Width="150" Margin="307,19,362,29" Click="StopButton_Click" Grid.Column="1" Height="50"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Margin="521,19,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Height="413" IsEnabled="False"/>

    </Grid>
</Window>