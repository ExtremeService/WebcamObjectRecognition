<Window x:Class="WebcamObjectRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Object Recognition" Height="685" Width="901" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status and Input -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Status: " FontSize="16"/>
            <TextBlock x:Name="StatusText" Text="Idle" FontSize="16" Foreground="Green"/>
        </StackPanel>

        <!-- Webcam Feed -->
        <Image x:Name="WebcamImage" Grid.Row="1" Stretch="Uniform" Margin="29,14,355,175" IsEnabled="False"/>

        <!-- Buttons -->
        <TabControl Grid.Row="1" Margin="0,432,0,0">
            <TabItem Header="Capture">
                <Grid Background="#FFE5E5E5">
                    <TextBlock Text=" Label:"     FontSize="16"    IsEnabled="False" RenderTransformOrigin="1.85,0.347" Margin="179,59,638,59" TextAlignment="Center" />
                    <TextBox x:Name="LabelInput" FontSize="16"          Height="50" Width="150" TextChanged="LabelInput_TextChanged" Margin="253,34,437,34" />
                    <Button x:Name="CaptureButton" Content="Capture"    Height="50" Width="150" Click="CaptureButton_Click" IsEnabled="False" Margin="434,34,256,34" />
                    <Button x:Name="FileButton" Content="ShowFiles"     Height="50" Width="150" Click="Files_Click" IsEnabled="False" Margin="620,34,70,34"/>
                    <RadioButton Content="FaceDetection" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
                    <RadioButton Content="NormalizeToReferenceImage" HorizontalAlignment="Left" Margin="133,11,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Train" Height="20" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="TrainModel" Content="Train Model" Width="150"  Click="Train_Click" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Detection">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="DetectButton" Content="Start Detect Mode" Click="DetectButton_Click" Width="150" Height="50"/>
                </Grid>
            </TabItem>
            <TabItem Header="Stop">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="769*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="StopButton" Content="Stop" Width="150" Click="StopButton_Click" Grid.Column="1" Height="50"/>
                </Grid>
            </TabItem>
        </TabControl>

        <TextBox x:Name="OutputBox" HorizontalAlignment="Left" Margin="521,19,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Height="413" IsEnabled="False"/>

    </Grid>
</Window>