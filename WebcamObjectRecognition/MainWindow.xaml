<Window x:Class="WebcamObjectRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webcam Object Recognition" Height="635" Width="846">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status and Input -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Status: " FontSize="16"/>
            <TextBlock x:Name="StatusText" Text="Idle" FontSize="16" Foreground="Green"/>
            <TextBlock Text=" Label: " FontSize="16" Margin="20,0,0,0"/>
            <TextBox x:Name="LabelInput" Width="150" FontSize="16"/>
        </StackPanel>

        <!-- Webcam Feed -->
        <Image x:Name="WebcamImage" Grid.Row="1" Stretch="Uniform" Margin="29,14,355,175"/>

        <!-- Buttons -->
        <TabControl Grid.Row="1" Margin="0,432,0,0">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="TrainButton" Content="Start Train Mode" Margin="187,24,486,24" Click="TrainButton_Click"/>
                    <Button x:Name="CaptureButton" Content="Capture" Width="100" Margin="420,24,320,24" Click="CaptureButton_Click" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="DetectButton" Content="Start Detect Mode" Width="120" Margin="289,19,352,29" Click="DetectButton_Click" Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Stop">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"/>
                        <ColumnDefinition Width="769*"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="StopButton" Content="Stop" Width="100" Margin="307,19,362,29" Click="StopButton_Click" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
        <TextBox HorizontalAlignment="Left" Margin="579,34,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="221" Height="374" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>